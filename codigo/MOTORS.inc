MOTORS_INIT:
RET

MOTOR_AZIMUT_LEFT:
	PUSH AUX
	PUSHI SREG



	POPI SREG
	POP AUX
RET

MOTOR_AZIMUT_RIGHT:
	PUSH AUX
	PUSHI SREG



	POPI SREG
	POP AUX
RET

MOTOR_AZIMUT_OFF:
	PUSH AUX
	PUSHI SREG
	CLR AUX
	RPWM MOTOR_AZIMUT
	POPI SREG
	POP AUX
RET

